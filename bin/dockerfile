# Build
FROM alpine:3.20
# Install only required build dependencies
RUN apk upgrade --no-cache \
    && apk add --no-cache bind-tools chromium ca-certificates tzdata gettext netcat-openbsd wget \
    && apk --no-cache upgrade \
    && rm -rf /var/cache/apk/* \
    && adduser -D -g '' appuser

WORKDIR /app

COPY --chown=appuser:appuser num8 /usr/local/bin/
# Copy scripts
COPY --chown=appuser:appuser docker-entrypoint.sh /usr/local/bin/
COPY --chown=appuser:appuser wait-for-rabbitmq.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh /usr/local/bin/wait-for-rabbitmq.sh

# Set ownership of the app directory
RUN chown -R appuser:appuser /app

# Security: Switch to non-root user
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD num8 --help || exit 1


# Expose port (document the port used)
# EXPOSE 8003

# Use custom entrypoint for secret loading 
ENTRYPOINT ["docker-entrypoint.sh"]

CMD ["num8","launch"]